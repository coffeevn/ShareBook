<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvRentGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text="Nhập số tiền bạn muốn cho thuê:" />

    <TextView
        android:id="@+id/tvRentDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvRentGT"
        android:layout_below="@+id/tvRentGT"
        android:lines="2"
        android:textSize="16sp"
        android:gravity="center"
        android:text=".000 VNĐ / ngày" />

    <EditText
        android:id="@+id/etRentPrice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvRentDV"
        android:layout_toStartOf="@+id/tvRentDV"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvRentConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvRentGT"
        android:layout_below="@+id/etRentPrice"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="Xác nhận" />

    <TextView
        android:id="@+id/tvRentCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvRentConfirm"
        android:layout_alignTop="@+id/tvRentConfirm"
        android:layout_marginEnd="30dp"
        android:text="Hủy bỏ"
        android:textSize="20sp"/>

</RelativeLayout>